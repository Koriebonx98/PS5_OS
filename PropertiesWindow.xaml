<Window x:Class="PS5_OS.PropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Properties"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FF0F0F0F"
        KeyDown="Window_KeyDown">
    <Border Padding="18" Background="#FF151515" CornerRadius="6" BorderBrush="#FF2A2A2A" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left navigation column -->
            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <TextBlock Text="Properties" FontSize="18" FontWeight="SemiBold" Foreground="#FFE6E6E6" Margin="0 0 0 12"/>

                <RadioButton x:Name="SectionRoms"
                             Content="Roms"
                             Margin="0 0 0 8"
                             Foreground="#FFDADADA"
                             Checked="Section_Checked"/>

                <RadioButton x:Name="SectionExe"
                             Content="Exe"
                             Margin="0 0 0 8"
                             Foreground="#FFDADADA"
                             Checked="Section_Checked"/>

                <RadioButton x:Name="SectionUrl"
                             Content="url"
                             Margin="0 0 0 8"
                             Foreground="#FFDADADA"
                             Checked="Section_Checked"/>

                <RadioButton x:Name="SectionEmulator"
                             Content="Emulator"
                             Margin="0 0 0 8"
                             Foreground="#FFDADADA"
                             Checked="Section_Checked"/>

                <!-- New ID section -->
                <RadioButton x:Name="SectionIds"
                             Content="ID"
                             Margin="0 0 0 8"
                             Foreground="#FFDADADA"
                             Checked="Section_Checked"/>

                <RadioButton x:Name="SectionManage"
                             Content="Manage"
                             Margin="0 0 0 8"
                             Foreground="#FFDADADA"
                             Checked="Section_Checked"/>

                <StackPanel Orientation="Horizontal" Margin="0,18,0,0" HorizontalAlignment="Left">
                    <Button x:Name="OkButton"
                            Width="100"
                            Height="32"
                            Content="OK"
                            Margin="0,0,8,0"
                            Click="OkButton_Click"/>
                    <Button x:Name="CancelButton"
                            Width="100"
                            Height="32"
                            Content="Cancel"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Right content area -->
            <Border Grid.Column="1" Background="#FF1B1B1B" CornerRadius="4" Padding="12">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="SectionContent" />
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>