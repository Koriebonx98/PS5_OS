<UserControl x:Class="PS5_OS.AchievementsControl"
             x:ClassModifier="public"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PS5_OS"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="640"
             MinWidth="400" MinHeight="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="12" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="Achievements" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="&#x2022;" Margin="8,0" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Game.Title}" FontSize="14" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
            <Button Content="Refresh" Margin="12,0,0,0" Padding="8,2" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- Achievements list -->
        <ScrollViewer Grid.Row="1" Margin="12" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Achievements}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8" Margin="0,0,0,8" Background="#1AFFFFFF" CornerRadius="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="56"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="{Binding IconUri}" Width="48" Height="48" VerticalAlignment="Top" Margin="0,0,8,0" />

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#CCFFFFFF" TextWrapping="Wrap" MaxWidth="520"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding IsUnlocked, Converter={StaticResource BooleanToUnlockedTextConverter}}"
                                               FontWeight="Bold" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding UnlockedAt, StringFormat='Unlocked: {0:g}'}" FontSize="11" Foreground="#AAFFFFFF" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>