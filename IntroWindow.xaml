<Window x:Class="PS5_OS.IntroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Topmost="True"
        Background="Black"
        ShowInTaskbar="False"
        Loaded="IntroWindow_Loaded">
    <Grid>
        
        <MediaElement x:Name="IntroMedia"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Stop"
                      Stretch="UniformToFill"
                      MediaEnded="IntroMedia_MediaEnded"
                      MediaFailed="IntroMedia_MediaFailed"/>
    </Grid>
</Window>