<UserControl x:Class="PS5_OS.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PS5_OS"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="Black"
             Loaded="UserControl_Loaded"
             d:DesignWidth="1280" d:DesignHeight="720">

    <UserControl.Resources>
        <!-- Horizontal ItemsPanel for the ListBox -->
        <ItemsPanelTemplate x:Key="HorizontalPanelTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" />
        </ItemsPanelTemplate>

        <!-- Selected item scale -->
        <Style x:Key="AvatarListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid x:Name="Root">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Root" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.12" ScaleY="1.12"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Root" Property="Panel.ZIndex" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Avatar / Add item template. Data item exposes IsAdd and Name -->
        <DataTemplate x:Key="AvatarItemTemplate">
            <Grid Width="260" HorizontalAlignment="Center">
                <!-- Add visual -->
                <Grid x:Name="AddVisual" HorizontalAlignment="Center">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAdd}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Grid Width="220" Height="220">
                            <Ellipse Width="220" Height="220" Fill="#393939" Opacity="0.48"/>
                            <Ellipse Width="170" Height="170" Stroke="#8C8C8C" StrokeThickness="2"/>
                            <TextBlock Text="+" Foreground="#FFFFFF" FontSize="72" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="Add User" Foreground="#E6E6E6" FontSize="16" Margin="0,12,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Avatar visual -->
                <Grid x:Name="AvatarVisual" HorizontalAlignment="Center">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAdd}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Grid Width="220" Height="220" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse Width="220" Height="220" Stroke="#99C7B07A" StrokeThickness="6" Opacity="0.12">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="10"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <Ellipse Width="186" Height="186" Stroke="#E8E8E8" StrokeThickness="3" Opacity="0.9"/>
                            <Ellipse Width="170" Height="170" Stroke="#333333" StrokeThickness="4" Opacity="0.55"/>
                            <Ellipse Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0.35,0.25">
                                        <GradientStop Color="#2B2F36" Offset="0.0"/>
                                        <GradientStop Color="#0F0F12" Offset="1.0"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Color="#000000" Opacity="0.3"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock Text="🎮" FontSize="18" Foreground="#EAEAEA" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,-28,0,0"/>
                        </Grid>

                        <TextBlock Text="{Binding Name}" Foreground="#F0F0F0" FontSize="18" HorizontalAlignment="Center" Margin="0,12,0,0" TextAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                            <TextBlock Text="☰" FontSize="14" Foreground="#CFCFCF" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Options" Foreground="#CFCFCF" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <!-- Background image for login screen (darkened overlay applied).
             Uses relative path to project output: Data\Resources\Dashboard\PS5Background_All.jpg -->
        <!-- Optional semi-transparent overlay to darken image for legibility -->
        <Rectangle Fill="#80000000" IsHitTestVisible="False"/>

        <!-- Main centered layout -->
        <Grid x:Name="MainContent" Margin="48">
            <Grid.Effect>
                <BlurEffect Radius="0"/>
            </Grid.Effect>

            <Grid.RowDefinitions>
                <RowDefinition Height="220"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="96"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel x:Name="TitlePanel" Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <TextBlock x:Name="MainTitle" Text="Welcome Back to PlayStation" Foreground="#F6F6F6" FontSize="40" HorizontalAlignment="Center"/>
                <TextBlock Text="Who's using this controller?" Foreground="#BFBFBF" FontSize="16" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Carousel area -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,18,0,0">
                <ListBox x:Name="lstAccounts"
                         ItemTemplate="{StaticResource AvatarItemTemplate}"
                         ItemContainerStyle="{StaticResource AvatarListBoxItemStyle}"
                         ItemsPanel="{StaticResource HorizontalPanelTemplate}"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Width="760"
                         Height="300"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionMode="Single"
                         PreviewKeyDown="LstAccounts_PreviewKeyDown"
                         SelectionChanged="LstAccounts_SelectionChanged"
                         Focusable="True"/>
            </StackPanel>

            <!-- Selected name -->
            <StackPanel Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,18,0,0">
                <TextBlock x:Name="txtSelected" Text="(none)" Foreground="#F0F0F0" FontSize="20" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Transition overlay used to animate the selected avatar and fade to dashboard -->
        <Grid x:Name="TransitionLayer"
              Visibility="Collapsed"
              IsHitTestVisible="False"
              Panel.ZIndex="999">
            <!-- darkening overlay -->
            <Rectangle x:Name="TransitionOverlay" Fill="Black" Opacity="0"/>
            <!-- radial burst behind the avatar -->
            <Ellipse x:Name="BurstEllipse" Fill="#FFFFFF" Opacity="0" Width="0" Height="0" RenderTransformOrigin="0.5,0.5">
                <Ellipse.Effect>
                    <BlurEffect Radius="40"/>
                </Ellipse.Effect>
                <Ellipse.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Ellipse.RenderTransform>
            </Ellipse>

            <!-- host for the animated snapshot -->
            <Canvas x:Name="TransitionHost" IsHitTestVisible="False"/>
        </Grid>
    </Grid>
</UserControl>